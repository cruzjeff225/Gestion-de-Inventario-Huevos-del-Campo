@model Gestión_de_Inventario_Huevos_del_Campo.Models.Productos

@{
    ViewData["Title"] = "Eliminando producto";
}

<div class="container mt-5">
    <h1>Eliminar Producto</h1>
    <h3>¿Estás seguro de que deseas eliminar este producto?</h3>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Nombre</dt>
                        <dd class="col-sm-8">@Model.Nombre</dd>

                        <dt class="col-sm-4">Cantidad</dt>
                        <dd class="col-sm-8">@Model.Cantidad</dd>

                        <dt class="col-sm-4">Precio Compra</dt>
                        <dd class="col-sm-8">@Model.PrecioCompra.ToString("C", new System.Globalization.CultureInfo("es-SV"))</dd>

                        <dt class="col-sm-4">Precio Venta</dt>
                        <dd class="col-sm-8">@Model.PrecioVenta.ToString("C", new System.Globalization.CultureInfo("es-SV"))</dd>

                        <dt class="col-sm-4">Lote</dt>
                        <dd class="col-sm-8">@Model.Lote</dd>

                        <dt class="col-sm-4">Fecha Registro</dt>
                        <dd class="col-sm-8">@Model.FechaRegistro.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-4">Fecha Vencimiento</dt>
                        <dd class="col-sm-8">@Model.FechaVencimiento.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-4">Estado</dt>
                        <dd class="col-sm-8">@(Model.Estado ? "Activo" : "Inactivo")</dd>
                    </dl>
                </div>
            </div>

            <form asp-action="Deleted" method="post" class="mt-4">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash me-2"></i> Confirmar Eliminación
                </button>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-arrow-left me-2"></i> Cancelar
                </a>
            </form>
        </div>
    </div>
</div>