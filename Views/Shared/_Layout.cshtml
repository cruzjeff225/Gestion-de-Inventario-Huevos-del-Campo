@{
    var path = Context.Request.Path.Value?.ToLowerInvariant() ?? "";
    bool ocultarNavFooter = path == "/usuarios/login" || path == "/" || path == "/home/index";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gestión de Inventario Huevos del Campo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Gestión_de_Inventario_Huevos_del_Campo.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
</head>
<body class="d-flex flex-column min-vh-100">
    @if (!ocultarNavFooter)
    {
        <header>
            <nav class="navbar navbar-expand-lg navbar-plain shadow-sm py-3">
                <div class="container-fluid">
                    <a class="navbar-brand d-flex align-items-center gap-2" asp-area="" asp-controller="Home" asp-action="Index">
                        <span class="navbar-logo-plain d-flex align-items-center justify-content-center me-2">
                            <i class="fas fa-egg text-secondary fs-4"></i>
                        </span>
                        <span class="fw-semibold fs-5 text-navbar-brand-plain">Gestión_de_Inventario_Huevos_del_Campo</span>
                    </a>
                    <button class="navbar-toggler border-0"
                            type="button"
                            data-bs-toggle="collapse"
                            data-bs-target="#navbarNavAltMarkup"
                            aria-controls="navbarNavAltMarkup"
                            aria-expanded="false"
                            aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                        <div class="navbar-nav ms-auto gap-2">
                            <a class="nav-link navbar-link-plain" asp-area="" asp-controller="Usuarios" asp-action="Index">
                                <i class="fas fa-users me-1"></i> Gestión de Usuarios
                            </a>
                            <a class="nav-link navbar-link-plain" asp-area="" asp-controller="Ventas" asp-action="Index">
                                <i class="fas fa-cash-register me-1"></i> Ventas
                            </a>
                            <a class="nav-link navbar-link-plain" asp-area="" asp-controller="Productos" asp-action="Index">
                                <i class="fas fa-boxes-stacked me-1"></i> Productos
                            </a>
                            <a class="nav-link navbar-link-plain" asp-area="" asp-controller="Reporte" asp-action="Index">
                                <i class="fas fa-file-pdf me-1"></i> Reportes PDF
                            </a>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <form asp-action="Logout" asp-controller="Usuarios" method="post" class="d-flex ms-lg-3">
                                    <button type="submit" class="btn btn-navbar-logout-plain">
                                        <i class="fas fa-sign-out-alt me-1"></i> Cerrar sesión
                                    </button>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            </nav>
        </header>
    }
    <div class="container flex-grow-1 d-flex flex-column">
        <main role="main" class="pb-3 flex-grow-1">
            @RenderBody()
        </main>
    </div>
    @if (!ocultarNavFooter)
    {
        <footer class="bg-body-tertiary text-center mt-5">
            <div class="container p-4"></div>
            <div class="text-center p-3 footer-copyright-bg">
                © 2025 Copyright:
                <a class="text-body" href="/">Gestión de Inventario Huevos del Campo</a>
            </div>
        </footer>
    }
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>