@model Gestión_de_Inventario_Huevos_del_Campo.Models.Usuarios

@{
    ViewData["Title"] = "Eliminando usuario";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="product-form-card-modern shadow-sm border-0 w-100" style="max-width: 420px;">
        <div class="card-body p-4 p-md-5">
            <div class="text-center mb-4">
                <div class="product-avatar-modern mx-auto mb-3" style="background: linear-gradient(135deg, #e0e7ef 60%, #f8fafc 100%);">
                    <i class="fas fa-user-times fa-lg text-secondary"></i>
                </div>
                <h2 class="fw-semibold mb-1 modern-title" style="color:#e74c3c;">Eliminar Usuario</h2>
                <p class="text-muted mb-0 small">¿Estás seguro de que deseas eliminar este usuario?</p>
            </div>

            <dl class="row mb-4 px-2">
                <dt class="col-6 modern-label fw-semibold">Nombre</dt>
                <dd class="col-6 text-end">@Model.Nombre</dd>

                <dt class="col-6 modern-label fw-semibold">Apellido</dt>
                <dd class="col-6 text-end">@Model.Apellido</dd>

                <dt class="col-6 modern-label fw-semibold">Correo Electrónico</dt>
                <dd class="col-6 text-end">@Model.CorreoElectronico</dd>

                <dt class="col-6 modern-label fw-semibold">Fecha de Creación</dt>
                <dd class="col-6 text-end">@Model.FechaCreacion.ToString("dd/MM/yyyy")</dd>
            </dl>

            <form asp-action="Deleted" method="post" autocomplete="off">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="ID" />
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-danger btn-sm flex-fill d-flex align-items-center justify-content-center gap-2" style="border-radius:0.5rem;">
                        <i class="fas fa-trash"></i> Confirmar Eliminación
                    </button>
                    <a asp-action="Index" class="btn btn-modern-outline btn-sm flex-fill d-flex align-items-center justify-content-center gap-2" style="border-radius:0.5rem;">
                        <i class="fas fa-arrow-left"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>