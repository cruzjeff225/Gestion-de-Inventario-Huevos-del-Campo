@model Gestión_de_Inventario_Huevos_del_Campo.Models.LoginViewModel

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<div class="login-bg-elegant min-vh-100 d-flex align-items-center justify-content-center">
    <div class="container d-flex justify-content-center">
        <div class="product-form-card-modern shadow-sm border-0 w-100" style="max-width: 420px;">
            <div class="card-body p-4 p-md-5">
                <div class="text-center mb-4">
                    <div class="product-avatar-modern mx-auto mb-3" style="background: linear-gradient(135deg, #bfc7d1 60%, #e9ecef 100%);">
                        <i class="fas fa-user fa-lg text-secondary"></i>
                    </div>
                    <h2 class="fw-semibold mb-2 modern-title">Iniciar Sesión</h2>
                    <p class="text-secondary mb-0 small">Accede a tu cuenta para continuar</p>
                </div>

                @if (!ViewData.ModelState.IsValid && ViewData.ModelState.Values.SelectMany(v => v.Errors).Any())
                {
                    <div class="alert alert-danger text-center" role="alert">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <div>@error.ErrorMessage</div>
                        }
                    </div>
                }

                <form asp-action="Login" method="post" autocomplete="off">
                    <div class="form-group mb-3">
                        <label asp-for="CorreoElectronico" class="form-label fw-semibold modern-label">
                            <i class="fas fa-envelope me-2 text-muted"></i>Correo electrónico
                        </label>
                        <input asp-for="CorreoElectronico" class="form-control modern-input" placeholder="nombre@correo.com" type="email" required />
                        <span asp-validation-for="CorreoElectronico" class="text-danger small"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Contraseña" class="form-label fw-semibold modern-label">
                            <i class="fas fa-lock me-2 text-muted"></i>Contraseña
                        </label>
                        <input asp-for="Contraseña" class="form-control modern-input" placeholder="Contraseña" type="password" required />
                        <span asp-validation-for="Contraseña" class="text-danger small"></span>
                    </div>
                    <div class="d-flex justify-content-end mb-3">
                        <a href="#" class="small elegant-link">¿Olvidaste tu contraseña?</a>
                    </div>
                    <button type="submit" class="btn btn-modern-primary btn-sm w-100 d-flex align-items-center justify-content-center gap-2 mb-3">
                        <i class="fas fa-sign-in-alt"></i> Ingresar
                    </button>
                    <div class="text-center text-muted">

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}