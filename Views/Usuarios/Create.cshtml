@model Gestión_de_Inventario_Huevos_del_Campo.Models.UsuariosViewModel

@{
    ViewData["Title"] = "Nuevo Usuario";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="product-form-card-modern shadow-sm border-0 w-100" style="max-width: 480px;">
        <div class="card-body p-4 p-md-5">
            <div class="text-center mb-4">
                <div class="product-avatar-modern mx-auto mb-3">
                    <i class="fas fa-user-plus text-white"></i>
                </div>
                <h2 class="fw-semibold mb-2 modern-title">Nuevo Usuario</h2>
                <p class="text-secondary mb-0 small">Completa los datos para registrar un nuevo usuario</p>
            </div>

            <form asp-action="Create" method="post" autocomplete="off">
                <div class="form-group mb-3">
                    <label asp-for="NuevoUsuario.Nombre" class="form-label fw-semibold modern-label">
                        <i class="fas fa-user me-2 text-muted"></i>Nombre
                    </label>
                    <input asp-for="NuevoUsuario.Nombre" class="form-control modern-input" placeholder="Nombre" />
                    <span asp-validation-for="NuevoUsuario.Nombre" class="text-danger small"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="NuevoUsuario.Apellido" class="form-label fw-semibold modern-label">
                        <i class="fas fa-user-tag me-2 text-muted"></i>Apellido
                    </label>
                    <input asp-for="NuevoUsuario.Apellido" class="form-control modern-input" placeholder="Apellido" />
                    <span asp-validation-for="NuevoUsuario.Apellido" class="text-danger small"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="NuevoUsuario.CorreoElectronico" class="form-label fw-semibold modern-label">
                        <i class="fas fa-envelope me-2 text-muted"></i>Correo Electrónico
                    </label>
                    <input asp-for="NuevoUsuario.CorreoElectronico" class="form-control modern-input" placeholder="Correo Electrónico" type="email" />
                    <span asp-validation-for="NuevoUsuario.CorreoElectronico" class="text-danger small"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="NuevoUsuario.Contraseña" class="form-label fw-semibold modern-label">
                        <i class="fas fa-lock me-2 text-muted"></i>Contraseña
                    </label>
                    <input asp-for="NuevoUsuario.Contraseña" class="form-control modern-input" placeholder="Contraseña" type="password" />
                    <span asp-validation-for="NuevoUsuario.Contraseña" class="text-danger small"></span>
                </div>

                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-modern-primary btn-sm flex-fill d-flex align-items-center justify-content-center gap-2">
                        <i class="fas fa-save"></i> Guardar
                    </button>
                    <a asp-action="Index" class="btn btn-modern-outline btn-sm flex-fill d-flex align-items-center justify-content-center gap-2">
                        <i class="fas fa-arrow-left"></i> Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}