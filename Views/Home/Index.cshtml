@{
    ViewData["Title"] = "Home Page";
}

<div class="home-hero-outer min-vh-100 d-flex align-items-center justify-content-center">
    <div class="container">
        <div class="text-center mb-5">
            <div class="home-avatar mx-auto mb-3">
                <i class="fas fa-egg fa-3x text-white"></i>
            </div>
            <h1 class="display-3 fw-bold mb-2 text-primary">Bienvenido</h1>
            <p class="lead text-secondary mb-0">Sistema de Gestión de Inventario Huevos del Campo</p>
        </div>

        <div class="row g-4 w-100 justify-content-center">
            <div class="col-12 col-md-6 col-lg-3">
                <a class="home-card card border-0 shadow-lg text-decoration-none h-100" asp-controller="Productos" asp-action="Index">
                    <div class="card-body text-center py-4">
                        <i class="fas fa-boxes-stacked fa-2x text-success mb-3"></i>
                        <h5 class="card-title fw-bold mb-2 text-dark">Gestión de Productos</h5>
                        <p class="card-text text-secondary mb-0">Consulta, edita y administra tus productos.</p>
                    </div>
                </a>
            </div>
            <div class="col-12 col-md-6 col-lg-3">
                <a class="home-card card border-0 shadow-lg text-decoration-none h-100" asp-controller="Ventas" asp-action="Index">
                    <div class="card-body text-center py-4">
                        <i class="fas fa-cash-register fa-2x text-primary mb-3"></i>
                        <h5 class="card-title fw-bold mb-2 text-dark">Gestión de Ventas</h5>
                        <p class="card-text text-secondary mb-0">Registra y visualiza ventas realizadas.</p>
                    </div>
                </a>
            </div>
            <div class="col-12 col-md-6 col-lg-3">
                <a class="home-card card border-0 shadow-lg text-decoration-none h-100" asp-controller="Reporte" asp-action="Index">
                    <div class="card-body text-center py-4">
                        <i class="fas fa-file-alt fa-2x text-warning mb-3"></i>
                        <h5 class="card-title fw-bold mb-2 text-dark">Reportes PDF</h5>
                        <p class="card-text text-secondary mb-0">Genera reportes de inventario y ventas.</p>
                    </div>
                </a>
            </div>
            <div class="col-12 col-md-6 col-lg-3">
                <a class="home-card card border-0 shadow-lg text-decoration-none h-100" asp-controller="Usuarios" asp-action="Index">
                    <div class="card-body text-center py-4">
                        <i class="fas fa-users fa-2x text-info mb-3"></i>
                        <h5 class="card-title fw-bold mb-2 text-dark">Gestión de Usuarios</h5>
                        <p class="card-text text-secondary mb-0">Administra los usuarios del sistema.</p>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>