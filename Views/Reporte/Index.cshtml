@{
    ViewData["Title"] = "Reporte";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="product-form-card-modern shadow-sm border-0 w-100" style="max-width: 420px;">
        <div class="card-body p-4 p-md-5">
            <div class="text-center mb-4">
                <div class="product-avatar-modern mx-auto mb-3" style="background: linear-gradient(135deg, #e9ecef 60%, #f8fafc 100%);">
                    <i class="fas fa-file-pdf fa-lg text-danger"></i>
                </div>
                <h2 class="fw-semibold mb-2 modern-title">Reportes PDF</h2>
                <p class="text-secondary mb-0 small">Descarga los reportes en formato PDF</p>
            </div>

            <div class="d-flex flex-column gap-3">
                <a asp-action="ExportarPdf" class="btn btn-modern-outline btn-sm d-flex align-items-center justify-content-center gap-2">
                    <span class="fw-semibold">Reporte de Ventas</span>
                </a>
                <a asp-action="Productos" class="btn btn-modern-outline btn-sm d-flex align-items-center justify-content-center gap-2">
                    <span class="fw-semibold">Reporte de Productos</span>
                </a>
            </div>
        </div>
    </div>
</div>