@model Gestión_de_Inventario_Huevos_del_Campo.Models.FiltroFechasViewModel

@{
    ViewData["Title"] = "Reporte Producto";
}

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="product-form-card-modern shadow-sm border-0 w-100" style="max-width: 420px;">
        <div class="card-body p-4 p-md-5">
            <div class="d-flex justify-content-between mb-3">
                <a asp-action="Index" class="btn btn-modern-outline btn-sm">Regresar</a>
            </div>
            <div class="text-center mb-4">
                <div class="product-avatar-modern mx-auto mb-3" style="background: linear-gradient(135deg, #e9ecef 60%, #f8fafc 100%);">
                    <i class="fas fa-file-pdf fa-lg text-danger"></i>
                </div>
                <h2 class="fw-semibold mb-2 modern-title">Reporte de Productos</h2>
                <p class="text-secondary mb-0 small">Filtra por fechas y genera el PDF</p>
            </div>

            <form asp-controller="Reporte" asp-action="GenerarPDFProductos" method="get" autocomplete="off">
                <div class="form-group mb-3">
                    <label for="FechaInicio" class="form-label fw-semibold modern-label">
                        <i class="fas fa-calendar-alt me-2 text-muted"></i>Fecha de Inicio
                    </label>
                    <input type="date" name="FechaInicio" id="FechaInicio" class="form-control modern-input" value="@Model.FechaInicio?.ToString("yyyy-MM-dd")" />
                </div>

                <div class="form-group mb-4">
                    <label for="FechaFin" class="form-label fw-semibold modern-label">
                        <i class="fas fa-calendar-alt me-2 text-muted"></i>Fecha de Fin
                    </label>
                    <input type="date" name="FechaFin" id="FechaFin" class="form-control modern-input" value="@Model.FechaFin?.ToString("yyyy-MM-dd")" />
                </div>

                <button type="submit" class="btn btn-modern-primary btn-sm w-100 d-flex align-items-center justify-content-center gap-2">
                    Generar Reporte
                </button>
            </form>
        </div>
    </div>
</div>